<h1>Welcome!</h1>
<% if current_user.nil? %>
<h3>
<%= link_to "Log in", user_session_path %></h3>
<% else %>
<h4><%= link_to "Log out", destroy_user_session_path, method: :delete %></p>

<%= link_to "Create new post", new_post_path %></h4>
<% end %>
<div>
<% @posts.each do |post| %><br />
<hr>
<h1><%= post.title %></h1>
<p><%= post.body %></p>
<% if current_user != nil and current_user.id == post.user_id %>
<p><%= link_to "Edit", edit_post_path(post.id) %>
 or 
 <%= link_to "Delete", post_path(post.id), data: {confirm: 'Are you sure?'}, method: :delete %></p>
<% end %>
<% end %>
</div>